{
  "name": "pint",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "description": "Public Interface - A public policies platform",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:seed": "node tooling/scripts/seed.mjs",
    "db:reset": "npx supabase db reset && pnpm db:seed",
    "db:studio": "pnpm --filter @pint/app run db:studio",
    "docker:up": "docker compose -f infra/docker/compose.dev.yml up -d",
    "docker:down": "docker compose -f infra/docker/compose.dev.yml down",
    "docker:logs": "docker compose -f infra/docker/compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@supabase/supabase-js": "^2.46.1",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prettier": "^3.1.1",
    "turbo": "^2.1.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
